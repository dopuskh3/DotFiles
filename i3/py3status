time {
    on_click 1 = "reload"
    on_click 2 = "restart"
}
ethernet enp0s31f6 {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip"
    format_down = ""
    on_click 1 = "exec x-terminal-emulator -c 'sudo iptraf-ng -i enp0s31f6'"
}

sysdata {
  format = "CPU: {cpu_usage}  Mem: {mem_used}/{mem_total} {mem_used_percent} "
}

order += "ethernet enp0s31f6"
order += "sysdata"
order += "time"
